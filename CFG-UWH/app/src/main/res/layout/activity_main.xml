<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dattamber.cfg_uwh.MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/mainlogo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"/>
    <EditText
        android:id="@+id/emailid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mainlogo"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:inputType="textEmailAddress"
        android:hint="E-Mail Address" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/emailid"
        android:layout_below="@id/emailid"
        android:layout_alignStart="@id/emailid"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Login" />

    <TextView
        android:id="@+id/signuptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginbtn"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/cardview_dark_background"
        android:text="Sign Up as :" />

    <Button
        android:id="@+id/donbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signuptext"
        android:layout_marginTop="21dp"
        android:layout_toStartOf="@+id/signuptext"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Donor" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/signuptext"
        android:layout_marginTop="32dp"/>
    <Button
        android:id="@+id/instbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/password"
        android:layout_alignTop="@+id/donbtn"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Institution" />
</RelativeLayout>
