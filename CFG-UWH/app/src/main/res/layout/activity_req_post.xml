<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dattamber.cfg_uwh.req_post">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/dfs"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@id/dfs"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:fontFamily="serif"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Enter the requested details"
        android:id="@+id/igl" />

    <EditText
        android:id="@+id/numunits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_below="@id/igl"
        android:inputType="number"
        android:hint="Enter Number of Units" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/numunits" />

    <EditText
        android:id="@+id/deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:layout_below="@id/spinner"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Enter Deadline" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:id="@+id/emer"
        android:textSize="18dp"
        android:text="Emergency"
        android:layout_below="@id/deadline"
        android:layout_marginTop="10dp"
        android:onClick="emerfun"/>

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:text="SEND REQUEST"
        android:layout_marginTop="30dp"
        android:textSize="14dp"
        android:layout_centerHorizontal="true"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_below="@id/emer"
       />

</RelativeLayout>
